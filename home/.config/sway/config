include /etc/sway/config.d/*

# Default config: /etc/static/sway/config

set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term alacritty

set $focused_con_pid swaymsg -t get_tree | jq -e '.nodes|map(select(.active))[0].nodes|map(.nodes)|flatten|.[]|recurse(.nodes[])|select(.focused).pid' 2>/dev/null
set $focused_output $(swaymsg -t get_outputs | jq -r '.|map(select(.active)|select(.focused))[0]')
set $current_ws_name "$(swaymsg -t get_workspaces | jq -r '.[] | select(.focused==true).name')"

font Monospace 1
for_window [class=".*"] title_format " "

# bar {
